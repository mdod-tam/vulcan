<%= render 'shared/mailers/header', title: "Training Session Completed" %>

<p>Hi <%= @constituent.full_name %>,</p>

<div style="background-color: #e6fffa; padding: 15px; margin: 20px 0; border-radius: 5px; border-left: 4px solid #81e6d9;">
  <h3 style="margin-top: 0; color: #2c7a7b;">
    <span aria-hidden="true">âœ“</span>
    Training Session Completed
  </h3>
  
  <div style="color: #2c7a7b;">
