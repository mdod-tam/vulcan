<%# Prepend the flash notice to the main flash container %>
<%= turbo_stream.prepend "flash" do %>
  <%= render "shared/flash" %>
<% end %>

<%# Replace the password form container with a success message %>
<%= turbo_stream.replace "password-reset-container" do %>
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md text-center">
    <h2 class="text-2xl font-semibold mb-4 text-green-700">Password Updated</h2>
    <p class="mb-6 text-gray-700">Your password has been successfully updated.</p>
    <%= link_to "Proceed to Sign In", sign_in_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
