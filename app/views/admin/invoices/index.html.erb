<div class="container mx-auto px-4 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900">Invoices</h1>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-4">
      <%= link_to admin_invoices_path(format: :csv, **request.query_parameters),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Export CSV
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mb-8">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: admin_invoices_path, method: :get, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-2">
            <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :status,
                  options_for_select([
                    ["All Statuses", nil],
                    ["Draft", "draft"],
                    ["Pending", "pending"],
                    ["Approved", "approved"],
                    ["Paid", "paid"],
                    ["Cancelled", "cancelled"]
                  ], params[:status]),
                  {},
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :vendor_id, "Vendor", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :vendor_id,
                  options_from_collection_for_select(
                    Vendor.active.order(:business_name),
                    :id,
                    :business_name,
                    params[:vendor_id]
                  ),
                  { include_blank: "All Vendors" },
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :payment_status, "Payment Status", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :payment_status,
                  options_for_select([
                    ["All", nil],
                    ["Pending Check", "pending_check"],
                    ["Check Issued", "check_issued"],
                    ["Check Cashed", "check_cashed"]
                  ], params[:payment_status]),
                  {},
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :date_range, "Date Range", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.select :date_range,
                  options_for_select([
                    ["All Time", nil],
                    ["Today", "today"],
                    ["Past Week", "week"],
                    ["Past Month", "month"],
                    ["Custom Range", "custom"]
                  ], params[:date_range]),
                  {},
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                  data: { action: "change->date-range#toggleCustomRange" } %>
            </div>
          </div>

          <div class="sm:col-span-2" data-date-range-target="customRange" style="display: none;">
            <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.date_field :start_date,
                  value: params[:start_date],
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-2" data-date-range-target="customRange" style="display: none;">
            <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.date_field :end_date,
                  value: params[:end_date],
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Apply Filters",
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Invoices Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invoice #</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vendor</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Period</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Check</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @invoices.each do |invoice| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= link_to invoice.invoice_number,
                    [:admin, invoice],
                    class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= link_to invoice.vendor.business_name,
                    [:admin, invoice.vendor],
                    class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= number_to_currency(invoice.total_amount) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case invoice.status %>
                <% when "draft" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Draft
                  </span>
                <% when "pending" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    Pending
                  </span>
                <% when "approved" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Approved
                  </span>
                <% when "paid" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Paid
                  </span>
                <% when "cancelled" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Cancelled
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= invoice.period_start.strftime("%b %d") %> -
                <%= invoice.period_end.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if invoice.check_number %>
                  <div>
                    <%= invoice.check_number %>
                    <% if invoice.check_cashed_at %>
                      <span class="text-green-600">(Cashed)</span>
                    <% end %>
                  </div>
                  <% if invoice.gad_invoice_reference %>
                    <div class="text-xs text-gray-400">
                      GAD: <%= invoice.gad_invoice_reference %>
                    </div>
                  <% end %>
                <% else %>
                  <span class="text-gray-400">Not issued</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= link_to "View",
                    [:admin, invoice],
                    class: "text-indigo-600 hover:text-indigo-900" %>
                <% if invoice.approved? && !invoice.check_number %>
                  |
                  <%= link_to "Issue Check",
                      [:admin, invoice],
                      class: "text-indigo-600 hover:text-indigo-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
