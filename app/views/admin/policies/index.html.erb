<%= turbo_frame_tag "policies" do %>
  <main class="container mx-auto px-4 py-8" role="main" aria-labelledby="edit-policies-title">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold" id="edit-policies-title">System Policies</h1>
      <div>
        <a href="<%= admin_applications_path %>" 
           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
           data-turbo-frame="_top"
           aria-label="Return to applications dashboard">
          Back to Dashboard
        </a>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b border-gray-200">
        <h1 class="text-2xl font-semibold text-gray-900">
          System Policies
        </h1>
      </div>

      <%= render "policies_form" %>
    </div>
  </main>
<% end %>
