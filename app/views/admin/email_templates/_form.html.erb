<% current_locale = local_assigns[:locale].presence || email_template.locale %>
<% locale_code = current_locale.to_s.upcase %>
<% submit_label = local_assigns[:submit_label].presence || "Save #{locale_code}" %>
<% form_action_path = local_assigns[:form_action_path].presence || admin_email_template_path(email_template) %>
<% editor_field_id = "body-editor-#{locale_code.downcase}" %>
<% editor_label_id = "body-label-#{locale_code.downcase}" %>
<% editor_help_id = "body-help-#{locale_code.downcase}" %>
<% variable_help_id = "variable-help-#{locale_code.downcase}" %>
<% variable_select_id = "variable-insert-#{locale_code.downcase}" %>

<%= form_with(model: [:admin, email_template], url: form_action_path, method: :patch, class: "space-y-4") do |form| %>
  <%= hidden_field_tag :locale, current_locale %>

  <% if email_template.needs_sync? %>
    <div class="rounded-md bg-amber-50 border border-amber-300 p-4" role="alert">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-amber-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-amber-800">
            <strong>Out of sync.</strong>
            Another locale variant of this template was updated. Update the body or subject below to resolve this, or
            <%= link_to "mark it as synced", mark_synced_admin_email_template_path(email_template),
                  data: { turbo_method: :patch, turbo_confirm: "Mark this template as synced without making changes?" },
                  class: "font-medium underline hover:text-amber-600",
                  role: "button" %>
            if the existing translation is still correct.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <% if email_template.errors.any? %>
    <div id="error_explanation_<%= locale_code.downcase %>" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Holy smokes!</strong>
      <span class="block sm:inline"><%= pluralize(email_template.errors.count, "error") %> prohibited this email_template from being saved:</span>
      <ul class="mt-3 list-disc list-inside text-sm">
        <% email_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, "Template Purpose (#{locale_code})", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Brief description of when this email is sent" %>
    <p class="mt-2 text-sm text-gray-500">
      Explain when and why this email is sent (e.g., "Sent when a constituent registers a new account").
    </p>
  </div>

  <div>
    <%= form.label :subject, "Email Subject (#{locale_code})", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :subject, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div data-controller="protected-variables">
    <%= form.label :body, "Body (#{locale_code})", id: editor_label_id, class: "block text-sm font-medium text-gray-700" %>
    
    <!-- Hidden textarea that stores actual data -->
    <%= form.text_area :body, 
        rows: 20, 
        class: "hidden",
        data: { "protected-variables-target": "textarea" } %>
    
    <!-- Visible editable div -->
    <div 
      id="<%= editor_field_id %>"
      data-protected-variables-target="editor"
      class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono p-3 min-h-96 bg-white"
      contenteditable="true"
      role="textbox"
      aria-multiline="true"
      tabindex="0"
      aria-labelledby="<%= editor_label_id %>"
      aria-describedby="<%= [editor_help_id, variable_help_id].join(' ') %>"
      style="white-space: pre-wrap; word-wrap: break-word; outline: none;">
    </div>
    
    <style>
      .protected-variable {
        background-color: #e0e7ff;
        color: #4f46e5;
        padding: 2px 4px;
        border-radius: 3px;
        font-weight: 500;
        cursor: not-allowed;
        user-select: none;
      }
    </style>
    
    <div class="mt-2 flex items-start gap-4">
      <div class="flex-1">

    <!-- Insert Variable Dropdown -->
        <label for="<%= variable_select_id %>" class="block text-sm font-medium text-gray-700 mb-2">
          Insert Variable
        </label>
        <select id="<%= variable_select_id %>" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 focus:ring-1 text-sm" data-protected-variables-target="variableSelect">
        <option value="">-- Select a variable to insert --</option>
        <% required_vars = email_template.required_variables || [] %>
        <% optional_vars = email_template.optional_variables || [] %>
        <% if required_vars.any? %>
          <optgroup label="Required Variables">
            <% required_vars.each do |var| %>
              <option value="%&lt;<%= var %>&gt;s"><%= var %></option>
            <% end %>
          </optgroup>
        <% end %>
        <% if optional_vars.any? %>
          <optgroup label="Optional Variables">
            <% optional_vars.each do |var| %>
              <option value="%&lt;<%= var %>&gt;s"><%= var %></option>
            <% end %>
          </optgroup>
        <% end %>
      </select>
      </div>
        <!-- Variable Help text -->
        <p id="<%= variable_help_id %>" class="text-sm text-gray-500 flex-1">
          Variables are highlighted in gray and cannot be edited.
        </p>  
    </div>
    <p id="<%= editor_help_id %>" class="mt-2 text-sm text-gray-500">
      Use keyboard or mouse to edit message text. Use the variable dropdown to insert placeholders.
    </p>
  </div>



  <%# Preview Section %>
  <div class="mt-6 mb-6 p-4 border border-gray-200 rounded-md bg-white">
    <h3 class="text-lg font-medium text-gray-700 mb-3">
      Template Preview (<%= locale_code %>) with Sample Data
    </h3>
    
    <% 
      # Use sample data provided by controller - fallback to empty hash if not available
      sample_data = @sample_data || {}
      
      # Render template with sample data
      begin
        # Create a temporary EmailTemplate object with current form values to preview unsaved changes
        temp_template = EmailTemplate.new(
          name: email_template.name,
          format: email_template.format,
          subject: email_template.subject,
          body: email_template.body
        )
        rendered_subject, rendered_body = temp_template.render(**sample_data)
      rescue => e
        rendered_subject = "Error rendering subject: #{e.message}"
        rendered_body = "Error rendering template: #{e.message}"
      end
    %>
    
    <div class="mb-4">
      <h4 class="text-md font-medium text-gray-600 mb-2">
        Subject Preview: <span class="font-normal"><%= rendered_subject %></span>
      </h4>
    </div>
    
    <div class="prose max-w-none mb-4">
      <h4 class="text-md font-medium text-gray-600 mb-2">
        Body Preview
      </h4>
      
      <div class="border border-gray-300 rounded-lg shadow-sm p-4 bg-white">
        <% if email_template.format == 'html' %>
          <div class="email-preview">
            <%= raw rendered_body %>
          </div>
        <% else %>
          <pre class="whitespace-pre-wrap text-sm"><%= rendered_body %></pre>
        <% end %>
      </div>
    </div>
    
    <div class="text-sm text-gray-600 mt-2 italic">
      <p>Preview uses sample data with placeholder values. All variables, headers, and footers are rendered.</p>
    </div>
  </div>

  <div class="flex justify-end pt-4">
    <%= form.submit submit_label, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
