<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Feature Flags</h1>
  
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Feature</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @feature_flags.each do |flag| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= flag.name.humanize.titleize %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                          <%= flag.enabled ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= flag.enabled ? 'Enabled' : 'Disabled' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= form_with(model: [:admin, flag], local: true, method: :patch) do |f| %>
                <%= f.hidden_field :enabled, value: !flag.enabled %>
                <%= f.submit flag.enabled ? 'Disable' : 'Enable', 
                             class: "text-sm #{flag.enabled ? 'text-red-600 hover:text-red-900' : 'text-green-600 hover:text-green-900'}" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
