<main class="container mx-auto px-4 py-8" role="main" aria-labelledby="edit-rejection-reason-title">
  <div class="max-w-4xl mx-auto">
    <%= render 'admin/shared/communications_section_nav', current: :rejection_reasons %>
    <div class="mb-6 flex items-start justify-between">
      <div>
        <h1 id="edit-rejection-reason-title" class="text-3xl font-bold text-gray-900">
          Edit Rejection Reason
        </h1>
        <p class="mt-2 text-sm text-gray-600">
          <span class="font-mono"><%= @rejection_reason.code %></span>
          for <%= rejection_reason_proof_type_label(@rejection_reason.proof_type) %> —
          <%= rejection_reason_locale_label(@rejection_reason.locale) %>
        </p>
      </div>
      <%= link_to 'Back to Rejection Reasons', admin_rejection_reasons_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    </div>

    <section class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="flex items-start justify-between gap-4">
        <div>
          <p class="text-sm text-gray-500"><%= rejection_reason_last_updated_text(@rejection_reason) %></p>
          <p class="text-sm text-gray-500 mt-1">Version: <%= @rejection_reason.version %></p>
        </div>
        <span class="<%= rejection_reason_sync_badge_classes(@rejection_reason) %>">
          <%= rejection_reason_sync_status(@rejection_reason) %>
        </span>
      </div>

      <% if @rejection_reason.needs_sync? %>
        <div class="mt-4 rounded-md bg-amber-50 border border-amber-300 p-4">
          <p class="text-sm text-amber-800">
            This locale is out of sync with its counterpart.
            Update the body below, or
            <%= link_to 'mark it as synced', mark_synced_admin_rejection_reason_path(@rejection_reason),
                data: { turbo_method: :patch, turbo_confirm: 'Mark this rejection reason as synced without changing text?' },
                class: "font-medium underline hover:text-amber-700" %>.
          </p>
        </div>
      <% end %>

      <% if @counterpart_reason.present? %>
        <div class="mt-4 rounded-md border border-gray-200 bg-gray-50 p-4">
          <p class="text-sm font-medium text-gray-700">
            Counterpart: <%= rejection_reason_locale_label(@counterpart_reason.locale) %>
          </p>
          <p class="mt-1 text-sm text-gray-600 line-clamp-3"><%= @counterpart_reason.body %></p>
          <p class="mt-1 text-xs text-gray-500">v<%= @counterpart_reason.version %> • <%= time_ago_in_words(@counterpart_reason.updated_at) %> ago</p>
          <div class="mt-2">
            <%= link_to "Edit #{@counterpart_reason.locale.to_s.upcase}", edit_admin_rejection_reason_path(@counterpart_reason),
                class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
          </div>
        </div>
      <% end %>
    </section>

    <section class="bg-white rounded-lg shadow p-6">
      <%= form_with model: [:admin, @rejection_reason], class: "space-y-4" do |form| %>
        <% if @rejection_reason.errors.any? %>
          <div class="rounded-md bg-red-50 border border-red-300 p-4">
            <p class="text-sm font-medium text-red-800">
              <%= pluralize(@rejection_reason.errors.count, 'error') %> prevented this rejection reason from saving:
            </p>
            <ul class="mt-2 list-disc list-inside text-sm text-red-700">
              <% @rejection_reason.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :body, "Reason Body (#{@rejection_reason.locale.to_s.upcase})", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :body, rows: 10,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-2 text-xs text-gray-500">
            Keep placeholders (like <span class="font-mono">%{address}</span>) intact when required by downstream interpolation.
          </p>
        </div>

        <% if @rejection_reason.previous_body.present? %>
          <div class="rounded-md border border-gray-200 bg-gray-50 p-4">
            <p class="text-sm font-medium text-gray-700">Previous body</p>
            <pre class="mt-2 whitespace-pre-wrap text-sm text-gray-600"><%= @rejection_reason.previous_body %></pre>
          </div>
        <% end %>

        <div class="flex justify-end">
          <%= form.submit "Save #{@rejection_reason.locale.to_s.upcase}",
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </section>
  </div>
</main>
