<main class="container mx-auto px-4 py-8" role="main" id="main-content">
  <div class="max-w-7xl mx-auto">
    <a href="#common-tasks" hidden="true">
      Skip to Common Application Tasks
    </a>
    
    <%# Admin Header Section - Contains page title and primary action buttons %>
    <div class="mb-6">
      <!-- Hidden semantic landmark for test compatibility -->
      <h1 class="sr-only">Dashboard</h1>
      
      <div class="flex items-start justify-between gap-4 mb-4">
        <h1 class="text-3xl font-bold" id="page-title">
          Admin Dashboard
        </h1>
        
        <%= link_to admin_print_queue_index_path,
            class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 flex items-center gap-3 whitespace-nowrap",
            aria: { label: "View print queue" } do %>
          <svg class="h-5 w-5 flex-shrink-0 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
          </svg>
          <div class="text-left">
            <div class="font-semibold text-sm">Print Queue
              <% if @metrics[:print_queue_pending_count].to_i > 0 %>
                (<%= @metrics[:print_queue_pending_count] %>)
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <%# 
        Administrative Action Buttons
      %>
      <div class="mb-8 space-y-8">
        <!-- Line 1: Enter Application, Applications, Users -->
        <div>
          <h3 class="text-xs font-semibold text-gray-600 uppercase tracking-widest mb-4 pl-1">Application Management</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <%= link_to new_admin_paper_application_path,
                class: "group relative overflow-hidden rounded-lg border-2 border-indigo-600 bg-indigo-600 px-6 py-4 text-white transition-all hover:shadow-lg hover:shadow-indigo-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "Apply for constituent" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Apply for Constituent</div>
                  <div class="text-xs opacity-90">Create new application</div>
                </div>
              </div>
            <% end %>
            
            <%= link_to admin_applications_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "View all applications" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Applications</div>
                  <div class="text-xs text-gray-600">View all submissions</div>
                </div>
              </div>
            <% end %>
            
            <%= link_to admin_users_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "Manage system users" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-2a6 6 0 0112 0v2zm0 0h6v-2a6 6 0 00-9-5.697" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Users</div>
                  <div class="text-xs text-gray-600">Manage team members</div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Line 2: Trainings, Evaluations, Reports -->
        <div>
          <h3 class="text-xs font-semibold text-gray-600 uppercase tracking-widest mb-4 pl-1">Review</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <%= link_to trainers_dashboard_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "View trainings dashboard" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Trainings</div>
                  <div class="text-xs text-gray-600">Training sessions</div>
                </div>
              </div>
            <% end %>
            
            <%= link_to evaluators_dashboard_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "View evaluations dashboard" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Evaluations</div>
                  <div class="text-xs text-gray-600">Review evaluations</div>
                </div>
              </div>
            <% end %>
            
            <%= link_to admin_reports_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "View detailed system reports and pain point analysis" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Reports</div>
                  <div class="text-xs text-gray-600">Analytics & insights</div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Line 3: Edit Policies, Manage Products, Manage Emails -->
        <div>
          <h3 class="text-xs font-semibold text-gray-600 uppercase tracking-widest mb-4 pl-1">Configuration</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <%= link_to admin_policies_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "Edit system policies and settings" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Edit Policies</div>
                  <div class="text-xs text-gray-600">System settings</div>
                </div>
              </div>
            <% end %>

            <%= link_to admin_products_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "Manage products catalog" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8 4m-8-4v10l8 4M7 12l8 4m0 0l8-4" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Manage Products</div>
                  <div class="text-xs text-gray-600">Product catalog</div>
                </div>
              </div>
            <% end %>

            <%= link_to admin_email_templates_path,
                class: "group relative overflow-hidden rounded-lg border border-gray-300 bg-white px-6 py-4 text-gray-900 transition-all hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                aria: { label: "Manage email templates" } do %>
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 flex-shrink-0 text-indigo-600 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm">Manage Emails</div>
                  <div class="text-xs text-gray-600">Email templates</div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      </div>

    <%# Status Cards Section %>
    <section aria-labelledby="status-cards-heading" class="mb-6" id="dashboard-content">
      <h2 id="status-cards-heading" class="sr-only">Application Status Overview</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
          <h3 id="active-applications-heading" class="text-lg font-medium text-gray-900">In Progress Applications</h3>
          <p class="text-3xl font-bold text-indigo-600" aria-labelledby="active-applications-heading" aria-live="polite"><%= @metrics[:open_applications_count] || 0 %></p>
          <p class="text-sm text-gray-500">All active applications: submitted but unapproved</p>
          <div class="mt-2">
            <%= link_to admin_applications_path(filter: 'active'),
                class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                aria: { label: "View only active applications" } do %>
              <span>View Only Active Applications</span>
              <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow p-6">
          <h3 id="approved-heading" class="text-lg font-medium text-gray-900">Approved</h3>
          <p class="text-3xl font-bold text-indigo-600" aria-labelledby="approved-heading" aria-live="polite"><%= @metrics[:pending_services_count] || 0 %></p>
          <p class="text-sm text-gray-500">Approved and awaiting services</p>
          <div class="mt-2">
            <%= link_to admin_applications_path(filter: 'approved'),
                class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                aria: { label: "View only approved applications" } do %>
              <span>View Only Approved</span>
              <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </section>
    
    <%# Common Tasks Section %>
    <section id="common-tasks" aria-labelledby="common-tasks-heading" class="bg-white rounded-lg shadow p-4 mb-6">
      <h2 id="common-tasks-heading" class="text-lg font-medium text-gray-900 mb-4">Common Tasks</h2>
      <div class="flex flex-wrap gap-4">
        <%= link_to admin_applications_path(filter: 'proofs_needing_review'),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
            aria: { label: "View applications with proofs needing review" } do %>
          <span>Proofs Needing Review (<%= @metrics[:proofs_needing_review_count] %>)</span>
        <% end %>
        
        <%= link_to admin_applications_path(filter: 'medical_certs_to_review'),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
            aria: { label: "View applications with medical certifications to review" } do %>
          <span>Medical Certs to Review (<%= @metrics[:medical_certs_to_review_count] %>)</span>
        <% end %>

        <%= link_to admin_applications_path(filter: 'digitally_signed_needs_review'),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
            aria: { label: "View applications digitally signed but needing admin review" } do %>
          <span>Digitally Signed (Needs Review) (<%= @metrics[:digitally_signed_needs_review_count] %>)</span>
        <% end %>
        
        <%= link_to admin_applications_path(filter: 'training_requests'),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
            aria: { label: "View applications with training requests" } do %>
          <span>Training Requests (<%= @metrics[:training_requests_count] %>)</span>
        <% end %>
      </div>
    </section>

    <%# Assigned Notes Section %>
    <% if @assigned_notes.present? %>
      <section aria-labelledby="assigned-notes-heading" class="bg-white rounded-lg shadow p-4 mb-6">
        <div class="flex items-center justify-between mb-4">
          <h2 id="assigned-notes-heading" class="text-lg font-medium text-gray-900">Assigned Notes</h2>
        </div>
        
        <ul class="space-y-3">
          <% @assigned_notes.each do |note| %>
            <li class="bg-yellow-50 border-l-4 border-yellow-400 p-3 rounded">
              <div class="flex justify-between items-start gap-2">
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-gray-900 font-medium truncate">
                    <%= link_to note.application.user&.full_name, admin_application_path(note.application), class: "text-indigo-600 hover:text-indigo-500" %>
                  </p>
                  <p class="text-sm text-gray-700 mt-1 line-clamp-2"><%= note.content %></p>
                  <div class="mt-2 flex items-center gap-2 text-xs text-gray-500">
                    <span>by <%= note.admin.full_name %></span>
                    <span>â€¢</span>
                    <span><%= time_ago_in_words(note.created_at) %> ago</span>
                  </div>
                </div>
                <div class="flex-shrink-0">
                  <%= link_to "View", admin_application_path(note.application), class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </section>
    <% end %>

    <%# Notifications Section %>
    <section aria-labelledby="notifications-heading" class="bg-white rounded-lg shadow p-4 mb-6">
      <div class="flex items-center justify-between mb-4">
        <h2 id="notifications-heading" class="text-lg font-medium text-gray-900">Recent Notifications</h2>
        <%= link_to notifications_path(scope: 'all'), 
            class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 flex items-center",
            aria: { label: "View all notifications" } do %>
          View All
          <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
      
      <% if @recent_notifications.present? %>
        <ul class="divide-y divide-gray-200">
          <% @recent_notifications.each do |notification| %>
            <%= render "notifications/notification", notification: notification %>
          <% end %>
        </ul>
      <% else %>
        <p class="text-sm text-gray-500">No recent notifications</p>
      <% end %>
    </section>

    <%# Charts Section - Lazy-loaded via Turbo Frame for better performance %>
    <%= turbo_frame_tag "charts_section", src: charts_admin_applications_path, loading: "lazy" do %>
      <div class="mb-6 bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-center">
          <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span class="ml-2 text-gray-600">Loading charts...</span>
        </div>
      </div>
    <% end %>
  </div>
</main>
