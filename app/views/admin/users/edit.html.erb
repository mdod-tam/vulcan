<main class="container mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold">Edit User: <%= @user.full_name %></h1>
      <%= link_to "Back to User", admin_user_path(@user), class: "text-indigo-600 hover:text-indigo-500" %>
    </div>

    <%= form_with(model: [:admin, @user], local: true, class: "space-y-6") do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 p-4 rounded mb-6" role="alert" aria-atomic="true">
          <h2 class="text-red-700 font-medium">
            <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Basic Information -->
      <fieldset class="space-y-4 p-4 bg-gray-50 rounded">
        <legend class="text-lg font-medium text-gray-900">Basic Information</legend>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
            <%= f.telephone_field :phone,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                  placeholder: "555-555-5555" %>
          </div>
        </div>

        <div>
          <%= f.label :phone_type, "Phone Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div role="radiogroup" class="space-y-2">
            <div class="flex items-center">
              <%= f.radio_button :phone_type, "voice", id: "admin_user_phone_type_voice",
                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <%= f.label :phone_type_voice, "Voice", for: "admin_user_phone_type_voice", class: "ml-3 text-sm text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :phone_type, "videophone", id: "admin_user_phone_type_videophone",
                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <%= f.label :phone_type_videophone, "Videophone", for: "admin_user_phone_type_videophone", class: "ml-3 text-sm text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :phone_type, "text", id: "admin_user_phone_type_text",
                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <%= f.label :phone_type_text, "Text/SMS", for: "admin_user_phone_type_text", class: "ml-3 text-sm text-gray-700" %>
            </div>
          </div>
        </div>
      </fieldset>

      <!-- Address Information -->
      <fieldset class="space-y-4 p-4 bg-gray-50 rounded">
        <legend class="text-lg font-medium text-gray-900">Address Information</legend>
        
        <div>
          <%= f.label :physical_address_1, "Street Address", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :physical_address_1,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= f.label :physical_address_2, "Apartment/Suite", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :physical_address_2,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <%= f.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :city,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :state,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :zip_code, "ZIP Code", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :zip_code,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>
        </div>
      </fieldset>

      <!-- Communication Preferences -->
      <fieldset class="space-y-4 p-4 bg-gray-50 rounded">
        <legend class="text-lg font-medium text-gray-900">Communication Preferences</legend>
        
        <div>
          <%= f.label :communication_preference, "Notification Method", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div role="radiogroup" class="space-y-2">
            <div class="flex items-center">
              <%= f.radio_button :communication_preference, "email", id: "admin_user_comm_pref_email",
                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <%= f.label :communication_preference_email, "Email", for: "admin_user_comm_pref_email", class: "ml-3 text-sm text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :communication_preference, "letter", id: "admin_user_comm_pref_letter",
                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
              <%= f.label :communication_preference_letter, "Mailed Letter", for: "admin_user_comm_pref_letter", class: "ml-3 text-sm text-gray-700" %>
            </div>
          </div>
        </div>
      </fieldset>

      <!-- Form Actions -->
      <div class="flex items-center justify-end space-x-3">
        <%= link_to "Cancel", admin_user_path(@user),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            
        <%= f.submit "Update User",
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</main>
