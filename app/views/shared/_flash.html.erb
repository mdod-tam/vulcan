<% if flash.any? %>
  <div class="flash-messages" aria-live="polite">
    <% flash.each do |type, message| %>
      <div role="alert" class="flash-message flash-<%= type %> mb-4 <%= flash_class_for(type) %>" data-testid="flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>
  </div>
<% end %>
