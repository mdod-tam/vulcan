<div class="min-h-screen bg-gray-100 py-12">
  <div class="form-container max-w-2xl mx-auto">
    <!-- Skip Link placed at the top of the container -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:p-2 focus:bg-indigo-600 focus:text-white focus:z-10">
      Skip to main content
    </a>
    <!-- Wrap the form container with an id for the skip link -->
    <div id="main-content" tabindex="-1" class="bg-white p-4 sm:p-8 rounded shadow-md">
      <h1 class="text-2xl font-semibold mb-6 text-center" id="form-title">
        <% if @applicant_type == 'dependent' && @selected_dependent_name.present? %>
          New Application for <%= @selected_dependent_name %>
        <% else %>
          New Application for <%= current_user.full_name %>
        <% end %>
      </h1>
      <p class="text-l text-gray-900"><span style="color: red;">*</span> Indicates a required field</p>

      <% if flash[:alert] %>
        <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded mb-4" role="alert" aria-live="polite">
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>

      <%= form_with(model: [:constituent_portal, @application],
          local: true,
          class: "space-y-6",
          html: { "aria-label": "Application form" },
          "aria-labelledby": "form-title",
          data: { 
            controller: "income-validation currency-formatter accessibility-announcer autosave", 
            autosave_target: "form",
            autosave_url_value: autosave_field_constituent_portal_applications_path,
            autosave_debounce_wait_value: 1000,
            autosave_edit_form_url_value: constituent_portal_application_path(':id'),
            autosave_edit_autosave_url_value: autosave_field_constituent_portal_application_path(':id'),
            "income-validation-fpl-thresholds-value": fpl_thresholds_json,
            "income-validation-modifier-value": fpl_modifier_value
          }) do |form| %>
          
        <!-- Autosave status indicator -->
        <div data-autosave-target="autosaveStatus" class="text-sm text-gray-500 mt-2 hidden" role="status" aria-live="polite"></div>

        <% if @application.errors.any? %>
          <div id="error-summary" class="bg-red-50 p-4 rounded mb-6" role="alert" aria-live="assertive" aria-atomic="true" tabindex="-1" autofocus>
            <h2 class="text-red-700 font-medium">
              <%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:
            </h2>
            <ul class="list-disc list-inside text-red-700">
              <% @application.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
          <script>
            // Focus the error summary for screen reader users
            document.addEventListener('DOMContentLoaded', function() {
              var errorSummary = document.getElementById('error-summary');
              if (errorSummary) {
                errorSummary.focus();
              }
            });
          </script>
        <% end %>

        <!-- Application Status Display -->
        <div class="space-y-4 p-4 bg-gray-50 rounded">
          <h2 class="text-lg font-medium text-gray-900">Application Status</h2>
          <div>
            <div class="mt-1">
              <span class="inline-flex items-center px-3 py-2 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
                Draft
              </span>
            </div>
            <p class="mt-2 text-sm text-gray-700">
              Current status of your application
            </p>
          </div>
        </div>

        <!-- Applicant Information Section -->
        <section aria-labelledby="applicant-info-title" class="space-y-4 p-4 bg-gray-50 rounded">
          <h2 id="applicant-info-title" class="text-lg font-medium text-gray-900">Applicant</h2>
          
          <% if @applicant_type == 'dependent' && @selected_dependent_name.present? %>
            <%# Dependent application - show dependent name with option to change %>
            <div class="flex items-center justify-between">
              <p class="text-sm text-gray-700">
                This application is for <span class="font-semibold text-gray-900"><%= @selected_dependent_name %></span>
              </p>
              <%= link_to constituent_portal_dashboard_path, 
                    class: "text-sm text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded",
                    "aria-label": "Return to dashboard to select a different applicant" do %>
                <span class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                  </svg>
                  Change applicant
                </span>
              <% end %>
            </div>
            <%= hidden_field_tag "application[for_self]", "false" %>
            <%= form.hidden_field :user_id, value: @application.user_id %>
          <% else %>
            <%# Self application - show current user name %>
            <p class="text-sm text-gray-700">
              This application is for <span class="font-semibold text-gray-900"><%= current_user.full_name %></span>
            </p>
            <%= hidden_field_tag "application[for_self]", "true" %>
          <% end %>
        </section>

        <!-- Address Information Section -->
        <section aria-labelledby="address-section-title" class="space-y-4 p-4 bg-gray-50 rounded">
          <h2 id="address-section-title" class="text-lg font-medium text-gray-900">Address Information</h2>
          <div class="space-y-4">
            <div>
              <%= form.label :physical_address_1, "Street Address", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :physical_address_1, 
                  value: @address[:physical_address_1],
                  class: "mt-1 block w-full h-10 py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm required-label",
                  required: true,
                  data: { no_autosave: true } %>
            </div>
            
            <div>
              <%= form.label :physical_address_2, "Apartment/Suite", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :physical_address_2, 
                  value: @address[:physical_address_2],
                  class: "mt-1 block w-full h-10 py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  data: { no_autosave: true } %>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="md:col-span-1">
                <%= form.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :city, 
                    value: @address[:city],
                    class: "mt-1 block w-full h-10 py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm required-label",
                    required: true,
                    data: { no_autosave: true } %>
              </div>
              
              <div>
                <%= form.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
                <%= form.select :state, 
                    options_for_select([
                      ["Alabama", "AL"], ["Alaska", "AK"], ["Arizona", "AZ"], ["Arkansas", "AR"], 
                      ["California", "CA"], ["Colorado", "CO"], ["Connecticut", "CT"], ["Delaware", "DE"], 
                      ["Florida", "FL"], ["Georgia", "GA"], ["Hawaii", "HI"], ["Idaho", "ID"], 
                      ["Illinois", "IL"], ["Indiana", "IN"], ["Iowa", "IA"], ["Kansas", "KS"], 
                      ["Kentucky", "KY"], ["Louisiana", "LA"], ["Maine", "ME"], ["Maryland", "MD"], 
                      ["Massachusetts", "MA"], ["Michigan", "MI"], ["Minnesota", "MN"], ["Mississippi", "MS"], 
                      ["Missouri", "MO"], ["Montana", "MT"], ["Nebraska", "NE"], ["Nevada", "NV"], 
                      ["New Hampshire", "NH"], ["New Jersey", "NJ"], ["New Mexico", "NM"], ["New York", "NY"], 
                      ["North Carolina", "NC"], ["North Dakota", "ND"], ["Ohio", "OH"], ["Oklahoma", "OK"], 
                      ["Oregon", "OR"], ["Pennsylvania", "PA"], ["Rhode Island", "RI"], ["South Carolina", "SC"], 
                      ["South Dakota", "SD"], ["Tennessee", "TN"], ["Texas", "TX"], ["Utah", "UT"], 
                      ["Vermont", "VT"], ["Virginia", "VA"], ["Washington", "WA"], ["West Virginia", "WV"], 
                      ["Wisconsin", "WI"], ["Wyoming", "WY"], ["District of Columbia", "DC"]
                    ], (@address && @address.respond_to?(:[]) ? @address[:state] : nil) || params.dig(:application, :state) || current_user&.state || "MD"),
                    { include_blank: "Select State" },
                    { class: "mt-1 block w-full h-10 py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm required-label",
                      required: true,
                      data: { no_autosave: true } } %>
              </div>
              
              <div>
                <%= form.label :zip_code, "Zip Code", class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :zip_code, 
                    value: @address[:zip_code],
                    class: "mt-1 block w-full h-10 py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                    required: true,
                    pattern: "\\d{5}(-\\d{4})?",
                    title: "5-digit zip code (12345) or 9-digit zip code (12345-6789)",
                    data: { no_autosave: true } %>
              </div>
            </div>
          </div>
        </section>

        <!-- Disability Certification Group - Contains Disability Info and Certifying Professional -->
        <div class="p-4 bg-gray-50 border border-gray-200 rounded-lg">
          <h2 class="text-lg font-semibold text-gray-800 mb-4">Disability Certification</h2>

          <!-- Disability Information Section -->
          <section aria-labelledby="disability-section-title" class="space-y-4 p-4 bg-white border border-gray-200 rounded mb-4">
            <h3 id="disability-section-title" class="text-base font-medium text-gray-900 required-label">Disability Information</h3>
            <div class="flex items-start">
              <%= form.check_box :self_certify_disability,
                  { 
                    class: "mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded",
                    "aria-describedby": "disability-certification-description",
                    "aria-required": "true"
                  }, "1", "0" %>
              <%= form.label :self_certify_disability,
                  "I certify that I have a disability that affects my ability to access telecommunications services",
                  class: "ml-2 block text-sm text-gray-700" %>
            </div>
            <p id="disability-certification-description" class="text-sm text-gray-700">
              If you have a disability, please self-certify by checking the box above.
            </p>
            <fieldset class="space-y-2">
              <legend class="text-sm text-gray-700 font-medium">Select at least one disability that applies to <%= @applicant_type == 'dependent' ? 'your dependent' : 'you' %>:</legend>
              <div class="grid sm:grid-cols-2 gap-4">
                <% disabilities = [:hearing, :vision, :speech, :mobility, :cognition] %>
                <% disabilities.each do |disability| %>
                  <div class="flex items-center">
                    <%= form.check_box "#{disability}_disability",
                        checked: params.dig(:application, "#{disability}_disability") == "1" || (@applicant_user || current_user).send("#{disability}_disability"),
                        class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded",
                        "aria-describedby": "#{disability}-description" %>
                    <%= form.label "#{disability}_disability", disability.to_s.titleize,
                        class: "ml-2 text-sm text-gray-700" %>
                  </div>
                  <div id="<%= disability %>-description" class="sr-only">
                    Check if <%= @applicant_type == 'dependent' ? 'your dependent' : 'you' %> <%= @applicant_type == 'dependent' ? 'has' : 'have' %> a <%= disability %> disability
                  </div>
                <% end %>
              </div>
            </fieldset>
          </section>

          <!-- Certifying Professional Information (Nested Attributes) -->
          <%= form.fields_for :medical_provider_attributes do |mp| %>
            <%= render "medical_provider_form", form: mp %>
          <% end %>
        </div>

        <!-- Alternate Contact Section (optional) -->
        <section aria-labelledby="alternate-contact-section-title" class="space-y-4 p-4 bg-gray-50 rounded">
          <h2 id="alternate-contact-section-title" class="text-lg font-medium text-gray-900">Alternate Contact (Optional)</h2>
          <p class="text-sm text-gray-700">You may provide an alternate contact person who can be contacted regarding your application.</p>
          
          <div class="space-y-4">
            <div>
              <%= form.label :alternate_contact_name, "Name", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :alternate_contact_name, autocomplete: "name", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :alternate_contact_phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
                <%= form.telephone_field :alternate_contact_phone, autocomplete: "tel", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
              <div>
                <%= form.label :alternate_contact_email, "Email", class: "block text-sm font-medium text-gray-700" %>
                <%= form.email_field :alternate_contact_email, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>
          </div>
        </section>

        <!-- Required Documentation Section -->
        <fieldset class="space-y-6 p-4 bg-gray-50 rounded">
          <legend class="text-lg font-medium text-gray-900">Required Documentation</legend>
          
          <!-- Income Verification Subsection -->
          <div class="space-y-4">
            <h3 class="text-base font-medium text-gray-900">Income Verification</h3>
            
            <%# Income Information - grouped with income proof for logical flow %>
            <div class="p-4 border-2 border-gray-200 rounded-md bg-white transition-colors duration-200" 
                 data-income-validation-target="incomeFieldsContainer">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.label :household_size, "Household Size", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= form.number_field :household_size,
                        min: 1,
                        required: true,
                        class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-500 rounded-md",
                        "aria-describedby": "household_size_help",
                        "aria-required": "true",
                        data: { 
                          "income-validation-target": "householdSize"
                        } %>
                  </div>
                  <p class="mt-1 text-xs text-gray-700 required-label" id="household_size_help">
                    Total number of people living in your household
                  </p>
                </div>

                <div>
                  <%= form.label :annual_income, "Annual Income", class: "block text-sm font-medium text-gray-700 required-label" %>
                  <div class="mt-1 relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-700 sm:text-sm font-medium" aria-hidden="true">$</span>
                    </div>
                    <%= form.number_field :annual_income,
                        step: "0.01",
                        required: true,
                        class: "pl-7 focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-500 rounded-md",
                        "aria-describedby": "annual_income_help",
                        "aria-required": "true",
                        inputmode: "decimal",
                        data: { 
                          "income-validation-target": "annualIncome",
                          currency_formatter_target: "input"
                        } %>
                  </div>
                  <p class="mt-1 text-xs text-gray-700 required-label" id="annual_income_help">
                    Total yearly household income before taxes
                  </p>
                </div>
              </div>
            </div>

            <!-- Income Threshold Warning Container -->
            <div id="income-threshold-warning" hidden class="hidden" role="alert" aria-live="assertive" data-income-validation-target="warningContainer"></div>

            <div>
              <label for="application_income_proof" class="block text-sm font-medium text-gray-700">Upload Income Proof Document</label>
              <p id="income-hint" class="text-xs text-gray-700 mb-2">
                We need proof of your household income. Please provide one of the following acceptable documents: 
                <strong>Tax return</strong> (preferred), <strong>current year SSA award letter</strong> (less than 2 months old), 
                <strong>recent bank statement</strong> showing your SSA deposit, <strong>current, unexpired SSA/SSI/SSDI documentation</strong>, 
                <strong>current, unexpired Medicaid and/or SNAP award letter</strong>, or <strong>current, unexpired VA Benefits letter</strong>. 
                <span class="font-semibold text-red-600">This proof is required to submit your application.</span>
              </p>
              <%= form.file_field :income_proof,
                  id: "application_income_proof",
                  class: "block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                  "aria-describedby": "income-hint",
                  accept: ".pdf,.jpg,.jpeg,.png" %>
              <p class="mt-1 text-xs text-gray-700">
                <span class="sr-only">Keyboard users:</span> Press Space or Enter to open the file browser
              </p>
            </div>
          </div>

          <!-- Residency Verification Subsection -->
          <div class="space-y-4 pt-4 border-t border-gray-200">
            <h3 class="text-base font-medium text-gray-900">Residency Verification</h3>
            
            <%# Maryland residency attestation - grouped with residency proof for logical flow %>
            <div class="p-3 bg-white border border-gray-200 rounded">
              <div class="flex items-start">
                <%= form.check_box :maryland_resident,
                    class: "mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded",
                    required: true,
                    "aria-required": "true",
                    "aria-describedby": "maryland_resident_help" %>
                <%= form.label :maryland_resident, "I certify that I am a resident of Maryland",
                    class: "ml-2 block text-sm text-gray-700" %>
              </div>
              <p id="maryland_resident_help" class="ml-6 text-xs text-gray-700 mt-1">Note: This will be verified through the residency proof upload/review process</p>
            </div>

            <div>
              <label for="application_residency_proof" class="block text-sm font-medium text-gray-700 required-label">Upload Residency Proof Document</label>
              <p id="residency-hint" class="text-xs text-gray-700 mb-2">
                Upload one of the following acceptable documents: <strong>driver's license</strong>, <strong>state ID</strong>, 
                <strong>identification card</strong>, <strong>utility bill</strong>, or <strong> photo ID</strong>. 
                <span class="font-semibold text-red-600">This proof is required to submit your application.</span>
              </p>
              <%= form.file_field :residency_proof,
                  id: "application_residency_proof",
                  class: "block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                  "aria-describedby": "residency-hint",
                  accept: ".pdf,.jpg,.jpeg,.png" %>
              <p class="mt-1 text-xs text-gray-700">
                <span class="sr-only">Keyboard users:</span> Press Space or Enter to open the file browser
              </p>
            </div>
          </div>
        </fieldset>

        <!-- Form Actions -->
        <div class="px-6 py-4 bg-gray-50 flex items-center justify-end space-x-3 rounded-b-lg">
          <%= link_to "Cancel",
              constituent_portal_applications_path,
              class: "px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              role: "button",
              "aria-label": "Cancel application and return to applications list" %>
              
          <%= form.submit "Save Application",
              name: "save_draft",
              class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
              "aria-label": "Save application draft" %>

          <%= form.submit "Submit Application", 
              name: "submit_application",
              class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
              "aria-label": "Submit final application",
              data: { "income-validation-target": "submitButton" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
