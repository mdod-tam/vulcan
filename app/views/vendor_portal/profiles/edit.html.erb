<main class="container mx-auto px-4 py-8" role="main">
  <div class="max-w-3xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-8">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl font-bold text-gray-900">Vendor Profile</h1>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to vendor_portal_dashboard_path,
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          Back to Dashboard
        <% end %>
      </div>
    </div>

    <%= form_with model: @vendor, url: vendor_portal_profile_path, local: true, class: "space-y-8" do |f| %>
      <% if @vendor.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@vendor.errors.count, "error") %> prevented your profile from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @vendor.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Business Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Business Information</h2>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= f.label :business_name, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :business_name,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= f.label :business_tax_id, "Tax ID (EIN/SSN)", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :business_tax_id,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
              <p class="mt-2 text-sm text-gray-500">
                Enter your 9-digit Tax ID number (no dashes)
              </p>
            </div>

            <div class="sm:col-span-4">
              <%= f.label :website_url, "Website URL", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.url_field :website_url,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    placeholder: "https://www.example.com" %>
              </div>
              <p class="mt-2 text-sm text-gray-500">
                Enter your company website URL (optional)
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Contact Information</h2>
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= f.label :physical_address_1, "Address Line 1", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :physical_address_1,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
              <p class="mt-2 text-sm text-gray-500">
                Must match the address on your W9 form.
              </p>
            </div>
            <div class="sm:col-span-4">
              <%= f.label :physical_address_2, "Address Line 2", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :physical_address_2,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
            <div class="sm:col-span-2">
              <%= f.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :city,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
            </div>
            <div class="sm:col-span-2">
              <%= f.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :state,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
            </div>
            <div class="sm:col-span-2">
              <%= f.label :zip_code, "Zip Code", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :zip_code,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
            </div>
            <div class="sm:col-span-2">
              <%= f.label :phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.telephone_field :phone,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
            </div>
            <div class="sm:col-span-4">
              <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.email_field :email,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    required: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- W9 Form Upload -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">W9 Form</h2>
          
          <% if @vendor.w9_form.attached? %>
            <div class="mb-4 p-4 bg-gray-50 rounded-md">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-gray-700">
                    Current W9 form: <%= @vendor.w9_form.filename %>
                  </p>
                  <div class="mt-2">
                    <%= link_to "View Current W9",
                        rails_blob_path(@vendor.w9_form, disposition: "inline"),
                        class: "text-sm text-indigo-600 hover:text-indigo-500",
                        target: "_blank" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="mt-2">
            <%= f.label :w9_form, "Upload New W9", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.file_field :w9_form,
                  accept: "application/pdf",
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                  direct_upload: true %>
            </div>
            <p class="mt-2 text-sm text-gray-500">
              PDF format only, maximum size 10MB
            </p>
          </div>
        </div>
      </div>

      <!-- Terms and Conditions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Terms and Conditions</h2>

          <% if @vendor.terms_accepted_at? %>
            <p class="text-sm text-gray-700">
              Terms accepted on <%= @vendor.terms_accepted_at.strftime("%B %d, %Y") %>.
            </p>
            <p class="mt-2 text-sm">
              <%= link_to "Review the Terms and Conditions again", terms_path, class: "text-indigo-600 hover:text-indigo-500", target: "_blank" %>
            </p>
            <%# Add a hidden field to ensure terms_accepted is still part of the form submission if needed,
                though the controller logic should handle this by not requiring re-acceptance.
                If the intention is to allow un-accepting, this UI would need a different approach.
                For now, assuming once accepted, it remains accepted unless explicitly changed via a different mechanism. %>
            <%= f.hidden_field :terms_accepted, value: "1" %>
          <% else %>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= f.check_box :terms_accepted,
                    class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded",
                    required: true %>
              </div>
              <div class="ml-3 text-sm">
                <%= f.label :terms_accepted, class: "font-medium text-gray-700" do %>
                  I agree to the
                  <%= link_to "vendor terms and conditions", terms_path, class: "text-indigo-600 hover:text-indigo-500", target: "_blank" %>
                <% end %>
                <p class="text-gray-500">
                  By checking this box, you agree to our terms for voucher processing and reimbursement.
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Save Changes",
            class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</main>
